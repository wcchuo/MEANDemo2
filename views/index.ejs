<html>
    <head>
        <title>User Information</title>
        <link href='style.css' type="text/css" rel="stylesheet" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    </head>
    <body>
        <div class="container">
            <h3>User Information</h3>
            <form action='/users' method='post'>
            
                <label>Name: </label>
                <input type='text' name='name' placeholder='Your name'></br>
                
                <label>Age: </label>
                <input type='text' name='age' placeholder='Your age'></br>
                
                <label>Comment (Optional):</label>
                <textarea name='comment' rows='6' placeholder='Comments'></textarea></br>
                <input type='submit' value='Submit' class='button pull-right'>

            </form>
        </div>


         <div class="container">
             <h3>Current Users</h3>
             <hr>
             <% for (var i in users) { %>
                <label>Name: </label><%= users[i].name %></br>
                <label>Age: </label><%= users[i].age %></br>
                <label>Comment: </label><%= users[i].comment %></br>
             <hr>
             <% } %>
        </div>
    </body>
</html>